<form action="schedule" method="refresh">
<div class="container-fluid">
  <div class="row">
    <div class="col-md-3 offset-md-2">
      <div class="form-group">
        <label for="firstName">First Name</label>

          <input type="text" class="form-control" id="firstName" aria-describedby="firstName" placeholder="" name="firstName"
            <%if !@user_first_name.empty?%>
              value=@user_first_name
            <%end%>
          >

      </div>
    </div>
    <div class="col-md-3 offset-md-2">
      <div class="form-group">
        <label for="lastName">Last Name</label>

        <input type="text" class="form-control" id="lastName" aria-describedby="lastName" placeholder="" name="lastName"
          <%if !@user_last_name.empty?%>
            value=@user_last_name
          <%end%>
        >

      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3 offset-md-2">
      <div class="form-group">
        <label for="email">Email address</label>

        <input type="email" class="form-control" id="email" aria-describedby="email" placeholder="" value=<%=@user_email%> name="email">
        
        <small id="email" class="form-text text-muted">We'll never share your email with anyone else.</small>
      </div>
    </div>
    <div class="col-md-3 offset-md-2">
      <div class="form-group">
        <label for="phone">Phone</label>

        <input type="tel" class="form-control" id="phone" aria-describedby="phone" placeholder="" name="phone"
          <%if !@user_phone.empty?%>
            value=@user_phone
          <%end%>
        >

      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 offset-md-2">
      <div class="form-group">
        <label for="vehicleYear">Vehicle Year</label>
        <input type="text" class="form-control" id="vehicleYear" aria-describedby="vehicleYear" placeholder="" name="vehicleYear">
      </div>
    </div>
    <div class="col-md-2">
      <div class="form-group">
        <label for="vehicleMake">Vehicle Make</label>
        <input type="text" class="form-control" id="vehicleMake" aria-describedby="vehicleMake" placeholder="" name="vehicleMake">
      </div>
    </div>
    <div class="col-md-3">
      <div class="form-group">
        <label for="vehicleModel">Vehicle Model</label>
        <input type="text" class="form-control" id="vehicleModel" aria-describedby="vehicleModel" placeholder="" name="vehicleModel">
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 offset-md-2">
      <div class="form-group">
        <label for="vehicleVin">Vehicle VIN</label>
        <input type="text" class="form-control" id="vehicleVin" aria-describedby="vehicleVin" placeholder="" name="vehicleVin">
        <small id="vehicleVin" class="form-text text-muted">Vehicle identification number found on insurance card or driver side dash board.</small>
      </div>
    </div>
    <div class="col-md-2">
      <div class="form-group">
        <label for="desiredDate">Desired Date</label>
        <input type="date" class="form-control" id="desiredDate" aria-describedby="desiredDate" placeholder="" name="desiredDate">
      </div>
    </div>
    <div class="col-md-3">
      <div class="form-group">
        <label for="desiredTime">Desired Time</label>
        <select class="form-control" id="desiredTime" name="desiredTime">
          <option>Morning</option>
          <option>Afternoon</option>
          <option>Evening</option>
        </select>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 offset-md-4">
      <div class="form-group">
        <label for="reason">Reason for scheduling</label>
        <input type="textarea" class="form-control" id="reason" aria-describedby="reason" style="height:250px" name="reason">
        <small id="reason" class="form-text text-muted">Please describe the problems you are having with your vehicle.</small>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 offset-md-4 text-center">
       <%= submit_tag "Submit", class:"btn btn-primary"%>
       <%= javascript_tag "alert('unable to schedule appointment')" unless @appointment_canceled == false%>
       <%= javascript_tag "alert('appointment scheduled')" unless @appointment_scheduled == false%>
    </div>


  </div>
</form>
