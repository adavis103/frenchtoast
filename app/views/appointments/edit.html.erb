<h2 align="center">Modify Existing Appointment</h2> </br>

<div class="container-fluid">
  <%= form_for @appointment do |f| %>
    <div class="row" align="center">
      <div class="col-md-3 offset-md-3">
        <div class="form-group">
          <%= f.label :date %> </br>
          <%= f.date_field :date, :value => Time.now.strftime('%Y-%m-%d'), id: "appointmentDate" %>
        </div>
      </div>
      <div class="col-md-3">
        <div class="form-group" >
          <%= f.label :time %>
          <%= f.select :time, ["Morning", "Afternoon", "Evening"], {}, class: "form-control", id: "appointmentTime", :style => "width:150px" %>
        </div>
      </div>
    </div>
    <div class="row" align="center">
      <div class="col-md-3 offset-md-3" >
        <div class="form-group">
          <%= f.label :parts_needed %> </br>
          <%= f.text_field :parts_needed %>
        </div>
      </div>
      <div class="col-md-3">
        <div class="form-group">
          <%= f.label :hours_needed %> </br>
          <%= f.text_field :hours_needed %>
        </div>
      </div>
    </div>
    <div class="row" align="center">
      <div class="col">
        <div class="form-group">
           <%= f.label :cost %> $
           <%= f.text_field :cost,
             class: "form-control",
             pattern: "^[+-]?[0-9]{1,3}(?:,?[0-9]{3})*(?:\.[0-9]{2})?$",
             title: "Can use commas; cents are optional and are rounded to the hundreths",
             :style => "width: 150px; height: 33px;" 
           %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 offset-md-4 text-center">
         <%= f.submit "Update", class:"btn btn-primary"%>
      </div>
    </div>
  <% end %>
</div>