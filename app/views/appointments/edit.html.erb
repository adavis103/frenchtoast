<div class="container-fluid">
  <div class="row">
    <div class="col-md-8 offset-md-2 text-center mb-5 mt-5">
      <h1>Modify Existing Appointment</h1>
    </div>
  </div>
  <%= form_for @appointment do |f| %>
    <div class="row">
      <div class="col-md-2 offset-md-3">
        <div class="form-group">
          <%= f.label :date, "Date" %> </br>
          <%= f.date_field :date, :value => Time.now.strftime('%Y-%m-%d'), id: "appointmentDate", class: "form-control" %>
        </div>
      </div>
      <div class="col-md-2 offset-md-2">
        <div class="form-group" >
          <%= f.label :time, "Time" %>
          <%= f.select :time, ["Morning", "Afternoon", "Evening"], {}, class: "form-control", id: "appointmentTime" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2 offset-md-3" >
        <div class="form-group">
          <%= f.label :parts_needed, "Parts Needed" %> </br>
          <%= f.text_field :parts_needed, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-2 offset-md-2">
        <div class="form-group">
          <%= f.label :hours_needed, "Hours Needed" %> </br>
          <%= f.text_field :hours_needed, class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2 offset-md-5">
        <div class="form-group">
           <%= f.label :cost %> $
           <%= f.text_field :cost,
             class: "form-control",
             pattern: "^[+-]?[0-9]{1,3}(?:,?[0-9]{3})*(?:\.[0-9]{2})?$",
             title: "Can use commas; cents are optional and are rounded to the hundreths"
           %>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-4 offset-md-4 text-center">
         <%= f.submit "Update", class:"btn btn-danger" %>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-4 offset-md-4 text-center">
         <%= link_to 'Return', admin_path, class:"btn btn-secondary" %> 
      </div>
    </div>
  <% end %>
</div>