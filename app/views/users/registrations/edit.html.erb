<div class="container-fluid">
  <div class="row">
    <div class="col-md-4 offset-md-4 text-center mt-5">
      <h2>Edit Account Information</h2>
      <small>* denotes required field</small>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 offset-md-4 mt-5 mb-3">
      <div class="form-group">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.label :email %>*<br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
          <%= f.label :new_password, class: "mt-3" %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          <% if @minimum_password_length %>
            <em><%= @minimum_password_length %> characters minimum</em>
            <br />
          <% end %>
          <%= f.label :password_confirmation, class: "mt-3" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          <%= f.label :first_name, class: "mt-3" %><br />
          <%= f.text_field :first_name, class: "form-control" %>
          <%= f.label :last_name, class: "mt-3" %><br />
          <%= f.text_field :last_name, class: "form-control" %>
          <%= f.label :phone, class: "mt-3" %><br />
          <%= f.text_field :phone, class: "form-control" %>
          <%= f.label :current_password, class: "mt-3" %>*<br />
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
          <div class="text-center">
            <%= f.submit "Update", class: "btn btn-primary mt-3" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 offset-md-4 mt-5 mb-3 text-center">
      <p>Unhappy?</p>
      <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %>
    </div>
  </div>
</div>
